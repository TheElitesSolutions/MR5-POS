{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    // Attach configurations (for running app)
    {
      "name": "Attach: Main Process",
      "type": "node",
      "request": "attach",
      "port": 9292,
      "skipFiles": ["<node_internals>/**"],
      "localRoot": "${workspaceFolder}",
      "sourceMaps": true,
      "timeout": 30000
    },
    {
      "name": "Attach: Renderer Process",
      "type": "chrome",
      "request": "attach",
      "port": 5858,
      "urlFilter": "http://localhost:*",
      "webRoot": "${workspaceFolder}/renderer",
      "sourceMaps": true,
      "timeout": 30000
    },
    // Launch configurations
    {
      "name": "Launch: Electron Main",
      "type": "node",
      "request": "launch",
      "cwd": "${workspaceFolder}",
      "runtimeExecutable": "yarn",
      "runtimeArgs": ["dev"],
      "skipFiles": ["<node_internals>/**"],
      "sourceMaps": true,
      "resolveSourceMapLocations": [
        "${workspaceFolder}/**",
        "!**/node_modules/**"
      ],
      "outputCapture": "std"
    },
    // Debug main process only
    {
      "name": "Debug: Main Process Only",
      "type": "node",
      "request": "launch",
      "cwd": "${workspaceFolder}",
      "runtimeExecutable": "${workspaceFolder}/node_modules/.bin/electron",
      "windows": {
        "runtimeExecutable": "${workspaceFolder}/node_modules/.bin/electron.cmd"
      },
      "args": ["${workspaceFolder}/main"],
      "skipFiles": ["<node_internals>/**"],
      "sourceMaps": true,
      "outputCapture": "std"
    },
    // Test debugging
    {
      "name": "Debug: Jest Tests",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/node_modules/.bin/jest",
      "args": [
        "--runInBand",
        "--no-cache",
        "--watchAll=false"
      ],
      "cwd": "${workspaceFolder}",
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "sourceMaps": true
    },
    {
      "name": "Debug: Current Test File",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/node_modules/.bin/jest",
      "args": [
        "${fileBasename}",
        "--runInBand",
        "--no-cache",
        "--watchAll=false"
      ],
      "cwd": "${workspaceFolder}",
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "sourceMaps": true
    }
  ],
  "compounds": [
    {
      "name": "Full App: Main + Renderer",
      "configurations": ["Attach: Main Process", "Attach: Renderer Process"],
      "preLaunchTask": "yarn: dev",
      "presentation": {
        "hidden": false,
        "group": "debug",
        "order": 1
      }
    },
    {
      "name": "Debug: All Processes",
      "configurations": ["Debug: Main Process Only", "Attach: Renderer Process"],
      "stopAll": true
    }
  ]
}
